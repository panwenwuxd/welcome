<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.welcome.dao.admin.YXRoleDao">

	<select id="findOneById" resultType="com.bootdo.welcome.dao.admin.YXRoleDao">
		select `id`,`rname`,`rsign`,`remark`,`uv_code`,`order`,`flag` from yx_role where id = #{value}
	</select>

	<select id="findPageListByMap" resultType="com.bootdo.welcome.dao.admin.YXRoleDao">
		select `id`,`rname`,`rsign`,`remark`,`uv_code`,`order`,`flag` from yx_role
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="rname != null and rname != ''"> and rname = #{rname} </if>
		  		  <if test="rsign != null and rsign != ''"> and rsign = #{rsign} </if>
		  		  <if test="remark != null and remark != ''"> and remark = #{remark} </if>
		  		  <if test="uvCode != null and uvCode != ''"> and uv_code = #{uvCode} </if>
		  		  <if test="order != null and order != ''"> and order = #{order} </if>
		  		  <if test="flag != null and flag != ''"> and flag = #{flag} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="countByMap" resultType="int">
		select count(*) from yx_role
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="rname != null and rname != ''"> and rname = #{rname} </if>
		  		  <if test="rsign != null and rsign != ''"> and rsign = #{rsign} </if>
		  		  <if test="remark != null and remark != ''"> and remark = #{remark} </if>
		  		  <if test="uvCode != null and uvCode != ''"> and uv_code = #{uvCode} </if>
		  		  <if test="order != null and order != ''"> and order = #{order} </if>
		  		  <if test="flag != null and flag != ''"> and flag = #{flag} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.bootdo.welcome.dao.admin.YXRoleDao" useGeneratedKeys="true" keyProperty="id">
		insert into yx_role
		(
			`rname`, 
			`rsign`, 
			`remark`, 
			`uv_code`, 
			`order`, 
			`flag`
		)
		values
		(
			#{rname}, 
			#{rsign}, 
			#{remark}, 
			#{uvCode}, 
			#{order}, 
			#{flag}
		)
	</insert>
	 
	<update id="updateById" parameterType="com.bootdo.welcome.dao.admin.YXRoleDao">
		update yx_role 
		<set>
			<if test="rname != null">`rname` = #{rname}, </if>
			<if test="rsign != null">`rsign` = #{rsign}, </if>
			<if test="remark != null">`remark` = #{remark}, </if>
			<if test="uvCode != null">`uv_code` = #{uvCode}, </if>
			<if test="order != null">`order` = #{order}, </if>
			<if test="flag != null">`flag` = #{flag}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="removeById">
		delete from yx_role where id = #{value}
	</delete>
	
	<delete id="batchRemoveByIds">
		delete from yx_role where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>