<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.learns.dao.ScoreDao">

	<select id="get" resultType="com.bootdo.learns.domain.ScoreDO">
		select `id`,`uid`,`utime`,`score`,`ptime` from yw_score where id = #{value}
	</select>

	<select id="list" resultType="com.bootdo.learns.domain.ScoreDO">
		select `id`,`uid`,`utime`,`score`,`ptime` from yw_score
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="uid != null and uid != ''"> and uid = #{uid} </if>
		  		  <if test="utime != null and utime != ''"> and utime = #{utime} </if>
		  		  <if test="score != null and score != ''"> and score = #{score} </if>
		  		  <if test="ptime != null and ptime != ''"> and ptime = #{ptime} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from yw_score
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="uid != null and uid != ''"> and uid = #{uid} </if>
		  		  <if test="utime != null and utime != ''"> and utime = #{utime} </if>
		  		  <if test="score != null and score != ''"> and score = #{score} </if>
		  		  <if test="ptime != null and ptime != ''"> and ptime = #{ptime} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.bootdo.learns.domain.ScoreDO">
		insert into yw_score
		(
			`uid`, 
			`utime`, 
			`score`, 
			`ptime`
		)
		values
		(
			#{uid}, 
			#{utime}, 
			#{score}, 
			#{ptime}
		)
	</insert>
	 
	<update id="update" parameterType="com.bootdo.learns.domain.ScoreDO">
		update yw_score 
		<set>
			<if test="uid != null">`uid` = #{uid}, </if>
			<if test="utime != null">`utime` = #{utime}, </if>
			<if test="score != null">`score` = #{score}, </if>
			<if test="ptime != null">`ptime` = #{ptime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from yw_score where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from yw_score where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<select id="gettotalscore" resultType="com.bootdo.learns.domain.ScoreDO">
		select `uid`, COUNT(1) as `cnum`, MAX(score) as `score`, MIN(utime) as `utime` from yw_score 
		where uid=#{value}  group by uid
	</select>
</mapper>